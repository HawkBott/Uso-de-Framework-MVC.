@model IEnumerable<Producto.Entities.Producto>
@{
    ViewBag.Title = "Listar Productos";
    Layout = "~/Views/Shared/Administrator/_Layout.cshtml";
}

<div class="container">
    <div class="header">
        <h2>Listado de Productos</h2>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Foto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Cantidad</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Precio</td>
                        <td>@item.Foto</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
