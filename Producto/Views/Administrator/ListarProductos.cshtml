@model IEnumerable<Producto.Entities.Producto>
@{
    ViewBag.Title = "Listar Productos";
    Layout = "~/Views/Shared/Administrator/_Layout.cshtml";
}

@helper FormatCurrency(decimal amount)
{
    @String.Format("${0:N2}", amount)
}

<div class="container" id="productos-container">
    <div class="header" id="productos-header">
        <h2>Listado De Productos</h2>
    </div>

    <div class="table-responsive" id="productos-table-responsive">
        <table class="table" id="productos-table">
            <thead class="thead-dark" id="productos-thead">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="productos-row">
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@FormatCurrency(item.Precio)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
